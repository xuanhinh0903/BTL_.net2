@{
  ViewData["Title"] = "Giải phương trình bậc nhất";
}

<div>
  <div class="text-center">
    <h1>Giải phương trình bậc nhất</h1>
  </div>
  <div class="row justify-content-center mt-3">
    <form asp-action="" class="col-4">
      <div class="mb-3">
        <label for="a" class="form-label">Hệ số a:</label>
        <input type="text" class="form-control" id="a" name="a" required>
      </div>
      <div class="mb-3">
        <label for="b" class="form-label">Hệ số b:</label>
        <input type="text" class="form-control" id="b" name="b" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <h3 class="mt-3">@ViewBag.Result</h3>
</div>